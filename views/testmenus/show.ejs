<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="img-thumbnail">
                <h3>
                    <%= test.name %>
                    <span class="money">$200</span>
                </h3>
                <hr>
                <p>
                    <%= test.description %>
                </p>
                <div>
                    <p>Test Type:
                        <span class="type">
                            <%= test.type %>
                        </span>
                    </p>
                    <p>Pretest Information:
                        <span class="pretest">
                            <%= test.pretest %>
                        </span>
                    </p>
                    <p>Report Delivery:
                        <span class="delivery">
                            <%= test.delivery %>
                        </span>
                    </p>
                </div>
                <hr>

                <!-- CHECK FOR ADMIN -->
                <%if(currentUser && currentUser.username === 'akshay14021') { %>
                    <figcaption class="figure-caption text-left">
                        <p class="buttonedit">
                            <a class="btn btn-danger" href="/testmenu/<%=test._id%>/edit">Edit</a>

                        <form class="delete-form" action="/testmenu/<%=test._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        </p>
                    </figcaption>
                    
                <% } else { %>
                    <figcaption class="figure-caption text-right">
                        <p class="button">
                            <a class="btn btn-info btn-md" href="/testmenu/<%=test._id%>/appointment/new">Book Now</a>
                        </p>
                    </figcaption>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>