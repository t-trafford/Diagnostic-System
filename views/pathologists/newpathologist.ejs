<% include ../partials/header %>

    <div class="container">
        <h1 class="text">Add new Pathologist in system</h1>
        <hr>
        <div class="row">
            <div class="formcontrol">
                <form action="/pathologist" method="post">

                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Full Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="role" placeholder="Role">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="username">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-info btn-block">Add Pathologist</button>
                    </div>
                </form>
                <p>
                    <a href="/login">Login Here</a>
                </p>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>