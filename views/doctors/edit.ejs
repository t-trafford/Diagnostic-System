<% include ../partials/header %>

    <div class="container">
        <h1 class="text">Edit
            <%= doctor.name %>
        </h1>
        <hr>
        <div class="row">
            <div class="formcontrol">
                <form action="/doctors/<%= doctor._id %>/?_method=put" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= doctor.name %>" name="doctor[name]">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= doctor.speciality %>" name="doctor[speciality]">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= doctor.role %>" name="doctor[role]">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= doctor.username %>" name="doctor[username]">
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-success btn-block">Submit</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>